<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/ingredient_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Ingredient Name"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="@dimen/article_subheading"/>

    <TextView
        android:id="@+id/ingredient_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ingredient_name"
        android:textColor="@color/grey"
        android:textSize="@dimen/list_body"
        android:textAppearance="?attr/textAppearanceListItem"
        android:ellipsize="end"
        android:singleLine="true"
        tools:text="Sumber Kabrbohidrat"/>


    <TextView
        android:id="@+id/gram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="gr"/>

    <TextView
        android:id="@+id/ingredient_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/gram"
        android:layout_marginEnd="5dp"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="560"/>

</RelativeLayout>